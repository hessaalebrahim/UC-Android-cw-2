<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2EFAF"
    android:backgroundTint="#D4F1B3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Calculator"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextfirstnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="first number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextsecondnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextfirstnumber"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="secind number"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textviewresult"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_below="@+id/buttoncalculate"
        android:layout_alignBottom="@+id/editTextsecondnumber"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="-201dp"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttoncalculate"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_below="@+id/editTextsecondnumber"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="46dp"
        android:backgroundTint="#F6B1C9"
        android:text="Calculate" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="113dp"
        android:layout_height="196dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="44dp"
        app:srcCompat="@drawable/greencalculator" />

    <Button
        android:id="@+id/buttonsub"
        android:layout_width="118dp"
        android:layout_height="66dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="235dp"
        android:layout_marginTop="33dp"
        android:text="Subtract" />

</RelativeLayout>